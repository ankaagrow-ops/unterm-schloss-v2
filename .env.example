# Environment Variables Template für Unterm Schloss Website
# Kopiere diese Datei zu .env.local und fülle die Werte aus

# Google Maps API Key (für interaktive Karten)
NEXT_PUBLIC_GOOGLE_MAPS_KEY=dein-google-maps-api-key

# Database URL (falls später benötigt)
DATABASE_URL=postgresql://username:password@localhost:5432/unterm_schloss

# Email Service (Resend API)
RESEND_API_KEY=re_dein-resend-api-key

# Contact Email
CONTACT_EMAIL=eva.dirion@gmx.net

# Site URL (für absolute URLs)
SITE_URL=https://unterm-schloss.de

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Social Media (optional)
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/unterm_schloss
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/unterm.schloss
