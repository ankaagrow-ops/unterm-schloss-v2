---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';

const pageTitle = 'Die Wohnung - Unterm Schloss | Ferienwohnung Hambach';
const pageDescription = 'Charmante 85m² Ferienwohnung mit 2 Schlafzimmern, Holzofen und Fußbodenheizung. Direkt unter dem Hambacher Schloss. Ideal für bis zu 4 Personen.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Navigation -->
  <Navigation currentPath="/apartment" />

  <!-- Breadcrumbs -->
  <div class="breadcrumbs">
    <div class="container">
      <nav class="breadcrumb-nav">
        <a href="/" class="breadcrumb-link">🏠 Home</a>
        <span class="breadcrumb-separator">›</span>
        <span class="breadcrumb-current">Die Wohnung</span>
      </nav>
    </div>
  </div>
  
  <!-- Hero -->
  <Hero
    title="Die Wohnung"
    subtitle="Charmant. Lichtdurchflutet. Mit Herz eingerichtet."
    image="/images/13_wohnzimmer_olivgruenes_sofa_akzentwand.jpg"
    imageAlt="Stilvolles Wohnzimmer der Ferienwohnung"
  />

  <!-- Quick Actions Bar -->
  <div class="quick-actions">
    <div class="container">
      <div class="quick-actions-content">
        <button class="quick-action-btn scroll-to-gallery" onclick="document.querySelector('.photo-gallery').scrollIntoView({behavior: 'smooth'})">
          📸 Bildergalerie ansehen
        </button>
        <button class="quick-action-btn download-infosheet" onclick="downloadInfosheet()">
          📄 Infosheet herunterladen
        </button>
        <div class="share-buttons">
          <button class="share-btn whatsapp" onclick="shareWhatsApp()" title="Auf WhatsApp teilen">📱</button>
          <button class="share-btn email" onclick="shareEmail()" title="Per E-Mail teilen">✉️</button>
          <button class="share-btn copy" onclick="copyLink()" title="Link kopieren">🔗</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Unique Features Badges -->
  <div class="unique-features">
    <div class="container">
      <div class="feature-badges">
        <span class="feature-badge luxury">Luxusbad ⭐</span>
        <span class="feature-badge historic">Historisches Gebäude 🏛️</span>
        <span class="feature-badge location">Direkt unter dem Schloss 🏰</span>
        <span class="feature-badge comfort">Fußbodenheizung 🔥</span>
        <span class="feature-badge family">Familienfreundlich 👶</span>
      </div>
    </div>
  </div>

  <!-- Apartment Details -->
  <section class="apartment-details">
    <div class="container">
      <h2 class="section-heading">Wohnungsdetails</h2>
      <div class="specs-grid">
        <div class="spec-item">
          <div class="spec-icon">🛏️</div>
          <div class="spec-content">
            <h3>2 Schlafzimmer</h3>
            <p>Gemütlich eingerichtet mit hochwertigen Möbeln</p>
          </div>
        </div>
        <div class="spec-item">
          <div class="spec-icon">🚿</div>
          <div class="spec-content">
            <h3>1 Badezimmer</h3>
            <p>Mit Fußbodenheizung und modernen Sanitäranlagen</p>
          </div>
        </div>
        <div class="spec-item">
          <div class="spec-icon">📐</div>
          <div class="spec-content">
            <h3>85m² Wohnfläche</h3>
            <p>Großzügig und lichtdurchflutet</p>
          </div>
        </div>
        <div class="spec-item">
          <div class="spec-icon">👥</div>
          <div class="spec-content">
            <h3>Max. 4 Personen</h3>
            <p>Ideal für Familien oder kleine Gruppen</p>
          </div>
        </div>
        <div class="spec-item">
          <div class="spec-icon">🔥</div>
          <div class="spec-content">
            <h3>Holzofen</h3>
            <p>Gemütliche Atmosphäre an kühlen Abenden</p>
          </div>
        </div>
        <div class="spec-item">
          <div class="spec-icon">🌡️</div>
          <div class="spec-content">
            <h3>Fußbodenheizung</h3>
            <p>Komfortable Wärme in allen Räumen</p>
          </div>
        </div>
        <div class="spec-item">
          <div class="spec-icon">📶</div>
          <div class="spec-content">
            <h3>W-Lan</h3>
            <p>Kostenfreies Internet in der gesamten Wohnung</p>
          </div>
        </div>
        <div class="spec-item">
          <div class="spec-icon">🚗</div>
          <div class="spec-content">
            <h3>Parkplatz</h3>
            <p>Kostenfreier Parkplatz direkt am Haus</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Floor Plan Section -->
  <section class="floor-plan">
    <div class="container">
      <h2 class="section-heading">Grundriss & Aufteilung</h2>
      <div class="floor-plan-content">
        <div class="floor-plan-diagram">
          <svg viewBox="0 0 800 600" class="floor-plan-svg">
            <!-- Apartment outline -->
            <rect x="50" y="50" width="700" height="500" fill="#f8f9fa" stroke="#2b2419" stroke-width="2" rx="8"/>
            
            <!-- Living Room -->
            <rect x="70" y="70" width="300" height="200" fill="#e8f4fd" stroke="#2b2419" stroke-width="1" class="room-area" data-room="living"/>
            <text x="220" y="180" text-anchor="middle" class="room-label">Wohnzimmer</text>
            <text x="220" y="200" text-anchor="middle" class="room-size">25m²</text>
            
            <!-- Kitchen -->
            <rect x="70" y="290" width="300" height="120" fill="#f0f8e8" stroke="#2b2419" stroke-width="1" class="room-area" data-room="kitchen"/>
            <text x="220" y="360" text-anchor="middle" class="room-label">Küche</text>
            <text x="220" y="380" text-anchor="middle" class="room-size">15m²</text>
            
            <!-- Bedroom 1 -->
            <rect x="400" y="70" width="320" height="180" fill="#fdf2e8" stroke="#2b2419" stroke-width="1" class="room-area" data-room="bedroom1"/>
            <text x="560" y="180" text-anchor="middle" class="room-label">Schlafzimmer 1</text>
            <text x="560" y="200" text-anchor="middle" class="room-size">18m²</text>
            
            <!-- Bedroom 2 -->
            <rect x="400" y="270" width="320" height="140" fill="#fdf2e8" stroke="#2b2419" stroke-width="1" class="room-area" data-room="bedroom2"/>
            <text x="560" y="360" text-anchor="middle" class="room-label">Schlafzimmer 2</text>
            <text x="560" y="380" text-anchor="middle" class="room-size">16m²</text>
            
            <!-- Bathroom -->
            <rect x="70" y="430" width="200" height="100" fill="#e8f4fd" stroke="#2b2419" stroke-width="1" class="room-area" data-room="bathroom"/>
            <text x="170" y="490" text-anchor="middle" class="room-label">Badezimmer</text>
            <text x="170" y="510" text-anchor="middle" class="room-size">8m²</text>
            
            <!-- Hallway -->
            <rect x="290" y="430" width="200" height="100" fill="#f5f5f5" stroke="#2b2419" stroke-width="1" class="room-area" data-room="hallway"/>
            <text x="390" y="490" text-anchor="middle" class="room-label">Flur</text>
            <text x="390" y="510" text-anchor="middle" class="room-size">3m²</text>
            
            <!-- Entry -->
            <rect x="510" y="430" width="210" height="100" fill="#f5f5f5" stroke="#2b2419" stroke-width="1" class="room-area" data-room="entry"/>
            <text x="615" y="490" text-anchor="middle" class="room-label">Eingang</text>
            <text x="615" y="510" text-anchor="middle" class="room-size">3m²</text>
            
            <!-- Doors -->
            <line x1="370" y1="290" x2="370" y2="410" stroke="#2b2419" stroke-width="2"/>
            <line x1="400" y1="250" x2="400" y2="270" stroke="#2b2419" stroke-width="2"/>
            <line x1="400" y1="410" x2="400" y2="430" stroke="#2b2419" stroke-width="2"/>
            <line x1="490" y1="430" x2="510" y2="430" stroke="#2b2419" stroke-width="2"/>
            <line x1="270" y1="430" x2="290" y2="430" stroke="#2b2419" stroke-width="2"/>
          </svg>
        </div>
        
        <div class="floor-plan-info">
          <div class="room-details">
            <h3>Raumaufteilung</h3>
            <div class="room-list">
              <div class="room-item">
                <span class="room-name">Wohnzimmer</span>
                <span class="room-size">25m²</span>
              </div>
              <div class="room-item">
                <span class="room-name">Schlafzimmer 1</span>
                <span class="room-size">18m²</span>
              </div>
              <div class="room-item">
                <span class="room-name">Schlafzimmer 2</span>
                <span class="room-size">16m²</span>
              </div>
              <div class="room-item">
                <span class="room-name">Küche</span>
                <span class="room-size">15m²</span>
              </div>
              <div class="room-item">
                <span class="room-name">Badezimmer</span>
                <span class="room-size">8m²</span>
              </div>
              <div class="room-item">
                <span class="room-name">Flur & Eingang</span>
                <span class="room-size">6m²</span>
              </div>
            </div>
            <div class="total-area">
              <strong>Gesamtfläche: 85m²</strong>
            </div>
          </div>
          
          <div class="layout-description">
            <h3>Wohnungsbeschreibung</h3>
            <p>Von der Eingangstür gelangen Sie direkt in den lichtdurchfluteten Flur. Links führt der Weg ins gemütliche Wohnzimmer mit dem charakteristischen Holzofen. Die offene Küche ist direkt an das Wohnzimmer angeschlossen und bietet eine vollständige Ausstattung.</p>
            <p>Über den Flur erreichen Sie die beiden Schlafzimmer im Obergeschoss sowie das moderne Badezimmer mit Fußbodenheizung. Die Räume sind geschickt angeordnet und bieten viel Privatsphäre.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Photo Gallery -->
  <section class="photo-gallery">
    <div class="container">
      <h2 class="section-heading">Bildergalerie</h2>
      
      <!-- Category Tabs -->
      <div class="gallery-tabs">
        <button class="tab-button active" data-category="all">Alle</button>
        <button class="tab-button" data-category="wohnzimmer">Wohnzimmer</button>
        <button class="tab-button" data-category="küche">Küche</button>
        <button class="tab-button" data-category="schlafzimmer">Schlafzimmer</button>
        <button class="tab-button" data-category="badezimmer">Badezimmer</button>
        <button class="tab-button" data-category="außenbereich">Außenbereich</button>
      </div>

      <!-- Image Counter -->
      <div class="gallery-counter">
        <span id="gallery-counter">12 Bilder verfügbar</span>
      </div>

      <!-- Gallery Grid -->
      <div class="gallery-grid">
        <div class="gallery-item" data-category="wohnzimmer">
          <img 
            src="/images/13_wohnzimmer_olivgruenes_sofa_akzentwand.jpg" 
            alt="Wohnzimmer Hauptansicht" 
            loading="lazy"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
          />
          <div class="gallery-overlay">
            <span class="category-tag">Wohnzimmer</span>
          </div>
          <div class="image-placeholder" style="display: none; position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #666; font-family: 'DM Sans', sans-serif;">
            <span>Wohnzimmer Bild</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="wohnzimmer">
          <img src="/images/14_wohnzimmer_kristallleuchter_panorama.jpg" alt="Wohnzimmer Panorama" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Wohnzimmer</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="küche">
          <img src="/images/10_kueche_wohnkueche_roter_kuehlschrank.jpg" alt="Küche Hauptansicht" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Küche</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="küche">
          <img src="/images/11_kueche_essbereich_weitwinkel.jpg" alt="Essbereich" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Küche</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="schlafzimmer">
          <img src="/images/17_schlafzimmer_2_dachbalken_modern.jpg" alt="Schlafzimmer 1" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Schlafzimmer</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="schlafzimmer">
          <img src="/images/15_schlafzimmer_1_mit_deckenbalken.jpg" alt="Schlafzimmer 2" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Schlafzimmer</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="badezimmer">
          <img src="/images/20_badezimmer_1_luxusbad_badewanne_podest.jpg" alt="Badezimmer Hauptansicht" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Badezimmer</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="badezimmer">
          <img src="/images/21_badezimmer_dusche_oberlicht_modern.jpg" alt="Badezimmer Dusche" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Badezimmer</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="außenbereich">
          <img src="/images/04_innenhof_sitzecke_terrasse.jpg" alt="Außenbereich" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Außenbereich</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="außenbereich">
          <img src="/images/01_aussenansicht_fachwerkhaus_haupteingang.jpg" alt="Außenansicht Fachwerkhaus" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Außenbereich</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="außenbereich">
          <img src="/images/02_innenhof_fachwerk_kopfsteinpflaster.jpg" alt="Innenhof Fachwerk" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Außenbereich</span>
          </div>
        </div>
        
        <div class="gallery-item" data-category="außenbereich">
          <img src="/images/03_innenhof_durchgang_mit_weinfass.jpg" alt="Innenhof mit Weinfass" loading="lazy" />
          <div class="gallery-overlay">
            <span class="category-tag">Außenbereich</span>
          </div>
        </div>
      </div>

      <!-- Lightbox -->
      <div class="lightbox" id="lightbox">
        <div class="lightbox-content">
          <button class="lightbox-close" id="lightbox-close">&times;</button>
          <button class="lightbox-nav lightbox-prev" id="lightbox-prev">‹</button>
          <button class="lightbox-nav lightbox-next" id="lightbox-next">›</button>
          <img class="lightbox-image" id="lightbox-image" alt="" />
          <div class="lightbox-info">
            <span class="lightbox-category" id="lightbox-category"></span>
            <span class="lightbox-counter" id="lightbox-counter"></span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Amenities -->
  <section class="amenities">
    <div class="container">
      <h2 class="section-heading">Ausstattung</h2>
      <div class="amenities-categories">
        <div class="amenity-card">
          <div class="amenity-header">
            <span class="amenity-icon">🍳</span>
            <h3 class="amenity-title">Küche & Essen</h3>
          </div>
          <div class="amenity-content">
            <ul class="amenity-list">
              <li>Voll ausgestattete Küche</li>
              <li>Ceran-Kochfeld (4 Platten)</li>
              <li>Backofen</li>
              <li>Kühlschrank mit Gefrierfach</li>
              <li>Geschirrspüler</li>
              <li>Kaffeemaschine (Filter + Kapsel)</li>
              <li>Wasserkocher</li>
              <li>Toaster</li>
              <li>Geschirr & Besteck für 4+ Personen</li>
              <li>Töpfe, Pfannen, Küchenutensilien</li>
            </ul>
          </div>
        </div>

        <div class="amenity-card">
          <div class="amenity-header">
            <span class="amenity-icon">🛏️</span>
            <h3 class="amenity-title">Schlafen & Wohnen</h3>
          </div>
          <div class="amenity-content">
            <ul class="amenity-list">
              <li>2 Schlafzimmer (Doppelbetten)</li>
              <li>Hochwertige Matratzen</li>
              <li>Bettwäsche inklusive</li>
              <li>Kleiderschränke</li>
              <li>Nachttische</li>
              <li>Leselampen</li>
              <li>Verdunklungsvorhänge</li>
              <li>Bügeleisen & Bügelbrett</li>
            </ul>
          </div>
        </div>

        <div class="amenity-card">
          <div class="amenity-header">
            <span class="amenity-icon">🛁</span>
            <h3 class="amenity-title">Badezimmer</h3>
          </div>
          <div class="amenity-content">
            <ul class="amenity-list">
              <li>2 Badezimmer</li>
              <li>Badewanne (freistehend)</li>
              <li>Dusche mit Oberlicht</li>
              <li>Fußbodenheizung</li>
              <li>Handtücher inklusive</li>
              <li>Föhn</li>
              <li>Shampoo & Duschgel (Starterset)</li>
              <li>Waschmaschine</li>
              <li>Trockner</li>
            </ul>
          </div>
        </div>

        <div class="amenity-card">
          <div class="amenity-header">
            <span class="amenity-icon">🔥</span>
            <h3 class="amenity-title">Heizen & Klima</h3>
          </div>
          <div class="amenity-content">
            <ul class="amenity-list">
              <li>Holzofen (Brennholz vorhanden)</li>
              <li>Fußbodenheizung (Bad)</li>
              <li>Heizkörper in allen Räumen</li>
              <li>Programmierbare Thermostate</li>
            </ul>
          </div>
        </div>

        <div class="amenity-card">
          <div class="amenity-header">
            <span class="amenity-icon">📺</span>
            <h3 class="amenity-title">Unterhaltung & Technik</h3>
          </div>
          <div class="amenity-content">
            <ul class="amenity-list">
              <li>Smart-TV</li>
              <li>Kostenloses W-Lan (schnell)</li>
              <li>Bluetooth-Lautsprecher</li>
              <li>Bücher & Spiele</li>
              <li>Reiseführer Pfalz</li>
            </ul>
          </div>
        </div>

        <div class="amenity-card">
          <div class="amenity-header">
            <span class="amenity-icon">👶</span>
            <h3 class="amenity-title">Familie & Kinder</h3>
          </div>
          <div class="amenity-content">
            <ul class="amenity-list">
              <li>Babybett (auf Anfrage)</li>
              <li>Hochstuhl</li>
              <li>Kindergeschirr</li>
              <li>Wickelauflage</li>
              <li>Kindersicherungen</li>
            </ul>
          </div>
        </div>

        <div class="amenity-card">
          <div class="amenity-header">
            <span class="amenity-icon">🏡</span>
            <h3 class="amenity-title">Außenbereich & Extras</h3>
          </div>
          <div class="amenity-content">
            <ul class="amenity-list">
              <li>Innenhof mit Sitzgelegenheit</li>
              <li>Grill (auf Anfrage)</li>
              <li>Fahrräder verfügbar (auf Anfrage)</li>
              <li>Parkplatz direkt am Haus</li>
              <li>Gepäckaufbewahrung</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- House Rules -->
  <section class="house-rules">
    <div class="container">
      <h2 class="section-heading">Wichtige Informationen</h2>
      <div class="rules-grid">
        <div class="rule-item">
          <div class="rule-icon">🕒</div>
          <div class="rule-content">
            <h3>Check-in</h3>
            <p>15:00 Uhr</p>
          </div>
        </div>
        <div class="rule-item">
          <div class="rule-icon">🕙</div>
          <div class="rule-content">
            <h3>Check-out</h3>
            <p>10:00 Uhr</p>
          </div>
        </div>
        <div class="rule-item">
          <div class="rule-icon">📅</div>
          <div class="rule-content">
            <h3>Mindestaufenthalt</h3>
            <p>2 Nächte</p>
          </div>
        </div>
        <div class="rule-item">
          <div class="rule-icon">🐕</div>
          <div class="rule-content">
            <h3>Haustiere</h3>
            <p>Ja (€10/Tag)</p>
          </div>
        </div>
        <div class="rule-item">
          <div class="rule-icon">🚭</div>
          <div class="rule-content">
            <h3>Rauchen</h3>
            <p>Nichtraucher</p>
          </div>
        </div>
        <div class="rule-item">
          <div class="rule-icon">🧹</div>
          <div class="rule-content">
            <h3>Endreinigung</h3>
            <p>Inklusive</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Guest Reviews Section -->
  <section class="guest-reviews">
    <div class="container">
      <h2 class="section-heading">Was unsere Gäste sagen</h2>
      <div class="reviews-grid">
        <div class="review-card">
          <div class="review-rating">
            <span class="stars">⭐⭐⭐⭐⭐</span>
          </div>
          <blockquote class="review-quote">
            "Wunderschön eingerichtete Wohnung mit allem Komfort. Die Lage direkt unter dem Schloss ist einmalig. Eva ist eine herzliche Gastgeberin!"
          </blockquote>
          <div class="review-author">
            <div class="author-info">
              <span class="author-name">Familie Schmidt</span>
              <span class="review-date">August 2024</span>
            </div>
          </div>
        </div>

        <div class="review-card">
          <div class="review-rating">
            <span class="stars">⭐⭐⭐⭐⭐</span>
          </div>
          <blockquote class="review-quote">
            "Perfekter Ausgangspunkt für Wanderungen und Weinproben. Die Wohnung ist noch schöner als auf den Fotos. Absolut empfehlenswert!"
          </blockquote>
          <div class="review-author">
            <div class="author-info">
              <span class="author-name">Petra & Michael</span>
              <span class="review-date">September 2024</span>
            </div>
