    height: 18px;
    margin: 0;
    flex-shrink: 0;
  }

  .checkbox-label a {
    color: #8b7355;
    text-decoration: underline;
  }

  .btn {
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
