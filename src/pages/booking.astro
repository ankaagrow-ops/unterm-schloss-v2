<style>
  .booking-header {
    background: linear-gradient(135deg, #8b7355 0%, #7a6548 100%);
    color: white;
    padding: 3rem 0;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header-content h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .header-content p {
    font-family: 'DM Sans', sans-serif;
    font-size: 1.125rem;
    opacity: 0.9;
  }

  .booking-content {
    padding: 4rem 0;
    background: #fafaf9;
  }

  .booking-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 3rem;
    align-items: start;
  }

  .form-column {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .booking-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    color: #2b2419;
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-family: 'DM Sans', sans-serif;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

