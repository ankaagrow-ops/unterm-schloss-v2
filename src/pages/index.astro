---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import StorySection from '../components/StorySection.astro';
import FeaturesGrid from '../components/FeaturesGrid.astro';
import PillarsSection from '../components/PillarsSection.astro';
import ActivitiesSection from '../components/ActivitiesSection.astro';
import TestimonialQuote from '../components/TestimonialQuote.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import ScrollRevealGrid from '../components/ScrollRevealGrid.astro';

const pageTitle = 'Unterm Schloss - Stilvolle Ferienwohnung Hambach | Pfalz Weinstraße';
const pageDescription = 'Charmante Ferienwohnung in historischer Schloßstraße Hambach. Direkt unter dem Hambacher Schloss. Ideal für Wanderer, Weinliebhaber & Genießer.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section - Rams + Jobs Präzision -->
  <HeroSection
    title="Wo Tradition auf Gemütlichkeit trifft"
    subtitle="Liebevoll restaurierte Ferienwohnung in Hambachs historischer Schloßstraße"
    image="/images/01_aussenansicht_fachwerkhaus_haupteingang.jpg"
    imageAlt="Ferienwohnung Unterm Schloss - Außenansicht in der historischen Schloßstraße Hambach"
    ctaText="Verfügbarkeit anfragen"
    ctaHref="/booking"
    hasRealReviews={false}
    reviewCount={0}
    reviewRating={0}
  />

  <!-- Story -->
  <ScrollReveal animation="fade-up" trigger="0.5">
    <StorySection
      id="story"
      heading="Ein Ort mit Geschichte, Stil und Herz"
      content="<p>Willkommen in unserer charmanten Ferienwohnung direkt unter dem historischen Hambacher Schloss. Hier verbinden sich jahrhundertealte Geschichte mit modernem Komfort und stilvollem Design.</p><p>Unsere liebevoll eingerichtete Wohnung in der Schloßstraße 18 bietet Ihnen den perfekten Ausgangspunkt für unvergessliche Tage in der Pfalz. Ob Sie die Weinberge erkunden, durch den Pfälzer Wald wandern oder die kulturellen Schätze der Region entdecken möchten – hier finden Sie Ihr Zuhause auf Zeit.</p>"
      backgroundImage="/images/02_innenhof_fachwerk_kopfsteinpflaster.jpg"
    />
  </ScrollReveal>

  <!-- Features Grid -->
  <ScrollRevealGrid stagger="100" trigger="0.3">
    <FeaturesGrid
      heading="Ausstattung & Highlights"
      features={[
      {
        title: "Küche",
        image: "/images/10_kueche_wohnkueche_roter_kuehlschrank.jpg",
        imageAlt: "Moderne Wohnküche mit rotem Retro-Kühlschrank"
      },
      {
        title: "Bad",
        image: "/images/20_badezimmer_1_luxusbad_badewanne_podest.jpg",
        imageAlt: "Luxuriöses Badezimmer mit freistehender Badewanne"
      },
      {
        title: "Kamin",
        image: "/images/12_kamin_ofen_brennend_gemütlich.jpg",
        imageAlt: "Gemütlicher Holzofen im Wohnzimmer"
      }
    ]}
  />

  <!-- Features Link -->
  <section class="features-link">
    <div class="container">
      <a href="/apartment" class="link-button">
        Mehr zur Ausstattung →
      </a>
    </div>
  </section>

  <!-- Story 2 -->
  <ScrollReveal animation="fade-in" trigger="0.5">
    <StorySection
      heading="Mehr als eine Unterkunft – ein Stück Pfalz zum Erleben"
      content="<p>Seit vielen Jahren ist es uns eine Freude, Gäste in unserem Haus in der historischen Schloßstraße willkommen zu heißen. Mit viel Liebe zum Detail haben wir die Ferienwohnung Unterm Schloss gestaltet – als Ort der Ruhe, Gemütlichkeit und Begegnung. Jeder Raum erzählt ein Stück Geschichte, jedes Detail ist bewusst gewählt, um Ihren Aufenthalt angenehm zu machen.</p><p>Ob für ein Wochenende im Pfälzer Wald, eine Weinreise oder einfach zum Abschalten – hier erleben Sie die Pfalz von ihrer schönsten Seite: ehrlich, herzlich und unverstellt.</p>"
      backgroundImage="/images/05_innenhof_pfalz_schild_weingarten.jpg"
    />
  </ScrollReveal>

  <!-- Pillars -->
  <ScrollReveal animation="fade-up" trigger="0.4">
    <PillarsSection
      pillars={[
      {
        image: "/images/04_innenhof_sitzecke_terrasse.jpg",
        imageAlt: "Gemütliche Sitzecke im Innenhof",
        label: "HEIMISCH",
        title: "Familiär geführt",
        description: "Persönliche Gastfreundschaft – keine Agentur, kein Hotel. Wir leben und lieben diesen Ort und möchten, dass sich jeder Gast wie zuhause fühlt. Eva kümmert sich persönlich um jedes Detail – von der Anreise bis zum letzten Espresso im Hof."
      },
      {
        image: "/images/02_innenhof_fachwerk_kopfsteinpflaster.jpg",
        imageAlt: "Authentischer Fachwerkinnenhof mit Kopfsteinpflaster",
        label: "AUTHENTISCH",
        title: "Echt Pfälzisch",
        description: "Wein, Geschichte & Herzlichkeit – alles vor der Haustür. Rund um Hambach laden Weingüter, Feste und Wanderwege dazu ein, die Pfalz mit allen Sinnen zu genießen. Wir geben Ihnen gern unsere persönlichen Empfehlungen weiter."
      },
      {
        image: "/images/13_wohnzimmer_olivgruenes_sofa_akzentwand.jpg",
        imageAlt: "Stilvolles Wohnzimmer mit olivgrünem Sofa",
        label: "WELLNESS",
        title: "Mit Liebe eingerichtet",
        description: "Jedes Detail wurde mit Bedacht gewählt – von Möbeln mit Geschichte bis zu modernen Akzenten. Die Wohnung verbindet Stil und Wärme, sodass Sie ankommen und sofort abschalten können. Kein Designobjekt, sondern ein Ort mit Seele."
      },
      {
        image: "/images/01_aussenansicht_fachwerkhaus_haupteingang.jpg",
        imageAlt: "Lage in historischer Schloßstraße Hambach",
        label: "NAH",
        title: "Im Herzen Hambach's",
        description: "Direkt unter dem Schloss, zwischen Weinbergen und Fachwerk. Von hier aus erreichen Sie alle Highlights zu Fuß: das Hambacher Schloss, Weinstuben, Wochenmärkte und Wanderwege. Der perfekte Ausgangspunkt, um die Pfalz zu entdecken."
      }
    ]}
    />
  </ScrollReveal>

  <!-- Activities -->
  <ScrollRevealGrid stagger="150" trigger="0.3">
    <ActivitiesSection
      heading="Entdecken Sie die Pfalz mit allen Sinnen"
      activities={[
      {
        title: "Wein & Genuss",
        description: "Rund um Hambach beginnt das Herz der Deutschen Weinstraße. Zahlreiche Weingüter und gemütliche Straußwirtschaften laden zum Verkosten, Plaudern und Genießen ein. Unsere persönlichen Empfehlungen: Fassdaube, Fuxbau und Mohre Jule – alle fußläufig erreichbar. Zum Wohl. Die Pfalz.",
        image: "/images/05_innenhof_pfalz_schild_weingarten.jpg",
        imageAlt: "Pfälzer Weinregion rund um Hambach"
      },
      {
        title: "Wandern & Radfahren",
        description: "Direkt vor der Haustür starten Wege in den Pfälzer Wald – ob gemütlicher Spaziergang oder ambitionierte Tour. Die Weinberge, Wälder und Burgruinen rund um Hambach bieten immer neue Perspektiven. Auch Radfahrer finden hier abwechslungsreiche Routen mit weiten Ausblicken über die Rheinebene.",
        image: "/images/03_innenhof_durchgang_mit_weinfass.jpg",
        imageAlt: "Wanderwege durch die Pfalz"
      },
      {
        title: "Kultur & Geschichte",
        description: "Hambach gilt als 'Wiege der deutschen Demokratie' – ein Ort voller Geschichte. Das Hambacher Schloss ist nur wenige Minuten entfernt und bietet Führungen, Ausstellungen und einen herrlichen Panoramablick. In Neustadt und Umgebung erwarten Sie zudem Wochenmärkte, kleine Museen und Veranstaltungen rund um Wein & Kultur.",
        image: "/images/01_aussenansicht_fachwerkhaus_haupteingang.jpg",
        imageAlt: "Historisches Hambach mit Schloss"
      },
      {
        title: "Bewusst reisen – und die Pfalz genießen",
        description: "Unterm Schloss steht für einen respektvollen Umgang mit Geschichte, Natur und Region. Das Haus wurde behutsam renoviert, viele alte Elemente erhalten – von Holzbalken bis Naturstein. Wir schätzen das Einfache und Ursprüngliche: regionale Produkte, kurze Wege und ehrliche Gastfreundschaft. Wer hier wohnt, spürt sofort die Ruhe und den Charme der Pfalz – authentisch, nachhaltig, echt.",
        image: "/images/04_innenhof_sitzecke_terrasse.jpg",
        imageAlt: "Gemütlicher Innenhof"
      }
    ]}
    />
  </ScrollRevealGrid>

  <!-- Activities Link -->
  <section class="activities-link">
    <div class="container">
      <a href="/activities" class="link-button">
        Alle Aktivitäten →
      </a>
    </div>
  </section>

  <!-- Testimonial -->
  <ScrollReveal animation="fade-in" trigger="0.5">
    <TestimonialQuote
      quote="Zwischen Weinbergen und Wäldern zur Ruhe kommen – an einem Ort, der Geschichte atmet und Gelassenheit schenkt."
      backgroundImage="/images/14_wohnzimmer_kristallleuchter_panorama.jpg"
    />
  </ScrollReveal>

  <!-- Contact -->
  <ScrollReveal animation="scale-in" trigger="0.4">
    <ContactSection
      heading="Let's Connect"
      backgroundImage="/images/02_innenhof_fachwerk_kopfsteinpflaster.jpg"
      address={{
        street: "Schloßstraße 18",
        city: "67434 Hambach an der Weinstraße"
      }}
      email="eva.dirion@gmx.net"
      phone={["+49 172 804 9269"]}
    />
  </ScrollReveal>

  <!-- Contact Link -->
  <section class="contact-link">
    <div class="container">
      <a href="/contact" class="link-button">
        Zur Kontaktseite →
      </a>
    </div>
  </section>

  <!-- Footer -->
  <Footer />

</Layout>

<style>
  .features-link,
  .activities-link,
  .contact-link {
    padding: 2rem 0;
    background: #fafaf9;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .link-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: #8b7355;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .link-button:hover {
    background: #7a6548;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 115, 85, 0.3);
  }

  @media (max-width: 768px) {
    .features-link,
    .activities-link,
    .contact-link {
      padding: 1.5rem 0;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>