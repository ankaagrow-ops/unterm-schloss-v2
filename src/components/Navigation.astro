---
export interface Props {
  currentPath?: string;
}

const { currentPath = "/" } = Astro.props;

const navItems = [
  { label: "Home", href: "/" },
  { label: "Die Wohnung", href: "/apartment" },
  { label: "Aktivitäten", href: "/activities" },
  { label: "Blog", href: "/blog" },
  { label: "Buchen", href: "/booking" },
  { label: "Kontakt", href: "/contact" }
];
---

<nav class="navigation" id="navigation">
  <div class="container">
    <!-- Logo/Brand -->
    <a href="/" class="logo">
      <span class="logo-text">Unterm Schloss</span>
    </a>

    <!-- Desktop Menu -->
    <ul class="desktop-menu">
      {navItems.map((item) => (
        <li class="menu-item">
          <a 
            href={item.href} 
            class={`menu-link ${item.label === "Buchen" ? "btn-primary" : ""} ${currentPath === item.href ? 'active' : ''}`}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-toggle" id="mobile-menu-toggle" aria-label="Toggle mobile menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div class="mobile-menu-overlay" id="mobile-menu-overlay">
    <div class="mobile-menu-content">
      <button class="mobile-menu-close" id="mobile-menu-close" aria-label="Close mobile menu">
        <span class="close-icon">×</span>
      </button>
      
      <ul class="mobile-menu">
        {navItems.map((item) => (
          <li class="mobile-menu-item">
            <a 
              href={item.href} 
              class={`mobile-menu-link ${currentPath === item.href ? 'active' : ''}`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Backdrop -->
  <div class="backdrop" id="backdrop"></div>
</nav>

<style>
  .navigation {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(250, 250, 249, 0.85); /* Instructions: semi-transparent */
    backdrop-filter: blur(8px); /* Instructions: 8px blur */
    -webkit-backdrop-filter: blur(8px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 1rem 0; /* 16px - 2 × 8px */
    border-bottom: 1px solid rgba(61, 40, 23, 0.1); /* Instructions: #3d2817 */
  }

  .navigation.scrolled {
    padding: 0.75rem 0; /* 12px - 1.5 × 8px */
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
    background: rgba(250, 250, 249, 0.98); /* Instructions: consistent background */
  }

  /* Kontrast-Style: Navigation passt sich an Section-Typ an */
  .navigation.section--light {
    background: rgba(250, 250, 249, 0.85); /* Warmes Hell */
    border-bottom: 1px solid rgba(61, 40, 23, 0.1);
  }

  .navigation.section--light .logo-text,
  .navigation.section--light .menu-link,
  .navigation.section--light .hamburger-line,
  .navigation.section--light .close-icon {
    color: #3d2817; /* Instructions: primär dunkles Braun */
  }

  .navigation.section--dark {
    background: rgba(28, 18, 11, 0.85); /* Warmes Dunkel: #1c120b */
    border-bottom: 1px solid rgba(139, 115, 85, 0.2);
  }

  .navigation.section--dark .logo-text,
  .navigation.section--dark .menu-link,
  .navigation.section--dark .hamburger-line,
  .navigation.section--dark .close-icon {
    color: #fafaf9; /* Warmes Hell für Kontrast */
  }

  .navigation.section--dark .menu-link:hover {
    color: #8b7355; /* Instructions: akzent */
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1280px; /* 8px Grid: 160 × 8px */
    margin: 0 auto;
    padding: 0 1rem; /* 16px - 2 × 8px */
  }

  @media (min-width: 640px) {
    .container {
      padding: 0 1.5rem; /* 24px - 3 × 8px */
    }
  }

  @media (min-width: 1024px) {
    .container {
      padding: 0 2rem; /* 32px - 4 × 8px */
    }
  }

  /* Logo */
  .logo {
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo-text {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem; /* 24px */
    font-weight: 400;
    color: #3d2817; /* Instructions: primär dunkles Braun */
    letter-spacing: -0.02em;
  }

  /* RAMS DESKTOP MENU - 8px Grid Alignment */
  .desktop-menu {
    display: flex;
    align-items: center;
    gap: 2rem; /* 32px - 4 × 8px */
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu-item {
    position: relative;
  }

  .menu-link {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem; /* 14px */
    font-weight: 500;
    color: #3d2817; /* Instructions: primär dunkles Braun */
    text-decoration: none;
    padding: 0.5rem 0; /* 8px vertical */
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .menu-link:hover {
    color: #8b7355; /* Instructions: akzent */
  }

  .menu-link.active {
    font-weight: 600;
    color: #8b7355; /* Instructions: akzent */
    border-bottom: 2px solid #8b7355;
  }

  .menu-link.btn-primary {
    background: #8b7355; /* Instructions: akzent */
    color: white;
    padding: 0.75rem 1.5rem; /* 12px 24px - 8px Grid */
    border-radius: 0.5rem; /* 8px - 1 × 8px */
    font-weight: 600;
    border: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .menu-link.btn-primary:hover {
    background: #7a6548; /* Instructions: dunkler Hover */
    transform: translateY(-1px); /* Subtle movement */
    box-shadow: 0 4px 12px rgba(139, 115, 85, 0.3);
  }

  .menu-link.btn-primary.active {
    border-bottom: none;
  }

  /* Mobile Menu Button */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 2rem;
    height: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: transform 0.3s ease;
  }

  .mobile-menu-toggle:hover {
    transform: scale(1.1);
  }

  .hamburger-line {
    width: 1.5rem; /* 24px */
    height: 2px;
    background-color: #3d2817; /* Instructions: primär dunkles Braun */
    margin: 2px 0; /* 2px - 0.25 × 8px */
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 1px;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* JOBS MOBILE MENU - Clean, functional */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: rgba(255, 255, 255, 0.98); /* Clean white */
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    z-index: 1001;
    transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.08);
  }

  .mobile-menu-overlay.is-open {
    right: 0;
  }

  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 2rem 1.5rem; /* 32px 24px - 8px Grid */
    position: relative;
  }

  .mobile-menu-close {
    position: absolute;
    top: 2rem;
    right: 2rem;
    width: 3rem;
    height: 3rem;
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .mobile-menu-close:hover {
    transform: scale(1.1);
  }

  .close-icon {
    font-size: 2rem; /* 32px */
    color: #3d2817; /* Instructions: primär dunkles Braun */
    font-weight: 300;
  }

  .mobile-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .mobile-menu-item {
    margin: 1.5rem 0; /* 24px - 3 × 8px */
  }

  .mobile-menu-link {
    font-family: 'DM Sans', sans-serif;
    font-size: 1.5rem; /* 24px */
    font-weight: 500;
    color: #3d2817; /* Instructions: primär dunkles Braun */
    text-decoration: none;
    padding: 0.75rem 1rem; /* 12px 16px - 8px Grid */
    display: block;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0.5rem; /* 8px - 1 × 8px */
  }

  .mobile-menu-link:hover {
    color: #8b7355; /* Instructions: akzent */
    background: rgba(139, 115, 85, 0.05);
    transform: translateX(8px); /* Subtle movement - 8px Grid */
  }

  .mobile-menu-link.active {
    font-weight: 600;
    color: #8b7355; /* Instructions: akzent */
    background: rgba(139, 115, 85, 0.1);
  }

  /* Backdrop */
  .backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .backdrop.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  /* RAMS RESPONSIVE DESIGN - 8px Grid */
  @media (max-width: 768px) {
    .desktop-menu {
      display: none;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .container {
      padding: 0 1.5rem; /* 24px - 3 × 8px */
    }

    .logo-text {
      font-size: 1.25rem; /* 20px */
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem; /* 16px - 2 × 8px */
    }

    .logo-text {
      font-size: 1.125rem; /* 18px */
    }

    .mobile-menu-link {
      font-size: 1.25rem; /* 20px */
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navigation = document.getElementById('navigation');
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
    const mobileMenuClose = document.getElementById('mobile-menu-close');
    const backdrop = document.getElementById('backdrop');
    const mobileMenuLinks = mobileMenuOverlay.querySelectorAll('.mobile-menu-link');

    // Scroll detection
    let lastScrollY = window.scrollY;
    
    function handleScroll() {
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 50) {
        navigation.classList.add('scrolled');
      } else {
        navigation.classList.remove('scrolled');
      }
      
      lastScrollY = currentScrollY;
    }

    // Mobile menu toggle
    function toggleMobileMenu() {
      mobileMenuToggle.classList.toggle('active');
      mobileMenuOverlay.classList.toggle('is-open');
      backdrop.classList.toggle('is-open');
      
      // Prevent body scroll when menu is open
      if (mobileMenuOverlay.classList.contains('is-open')) {
        document.body.style.overflow = 'hidden';
      } else {
        document.body.style.overflow = '';
      }
    }

    function closeMobileMenu() {
      mobileMenuToggle.classList.remove('active');
      mobileMenuOverlay.classList.remove('is-open');
      backdrop.classList.remove('is-open');
      document.body.style.overflow = '';
    }

    // Event listeners
    window.addEventListener('scroll', handleScroll, { passive: true });
    
    mobileMenuToggle.addEventListener('click', toggleMobileMenu);
    mobileMenuClose.addEventListener('click', closeMobileMenu);
    backdrop.addEventListener('click', closeMobileMenu);
    
    // Close mobile menu on link click
    mobileMenuLinks.forEach(link => {
      link.addEventListener('click', () => {
        closeMobileMenu();
      });
    });

    // Close mobile menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && mobileMenuOverlay.classList.contains('is-open')) {
        closeMobileMenu();
      }
    });

    // Kontrast-Style: Navigation passt sich an Section-Typ an
    function updateNavigationForSection() {
      const sections = document.querySelectorAll('section');
      const currentSection = getCurrentSection(sections);
      
      if (currentSection) {
        const isLightSection = currentSection.classList.contains('section--light') || 
                              currentSection.classList.contains('story-section') ||
                              currentSection.classList.contains('pillars-section');
        
        if (isLightSection) {
          navigation.classList.remove('section--dark');
          navigation.classList.add('section--light');
        } else {
          navigation.classList.remove('section--light');
          navigation.classList.add('section--dark');
        }
      }
    }

    function getCurrentSection(sections) {
      const scrollY = window.scrollY;
      let currentSection = null;
      
      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        if (rect.top <= 100 && rect.bottom > 100) {
          currentSection = section;
        }
      });
      
      return currentSection;
    }

    // Update navigation on scroll
    window.addEventListener('scroll', () => {
      handleScroll();
      updateNavigationForSection();
    }, { passive: true });

    // Initial check
    updateNavigationForSection();
  });
</script>

<style is:global>
  /* Global style to prevent body scrolling when mobile menu is open */
  body.no-scroll {
    overflow: hidden;
  }
</style>