---
export interface Props {
  heading: string;
  content: string;
  backgroundImage?: string;
}

const { heading, content, backgroundImage } = Astro.props;
---

<section class="story" id="story">
  {backgroundImage && (
    <div class="story__background">
      <img 
        src={backgroundImage} 
        alt="" 
        class="story__background-image"
        loading="lazy"
      />
    </div>
  )}
  
  <div class="container">
    <div class="story__content">
      <h2 class="story__heading animate-fadeInUp">
        {heading}
      </h2>
      <div 
        class="story__text animate-fadeInUp animate-delay-200"
        set:html={content}
      ></div>
    </div>
  </div>
</section>

<style>
  .story {
    position: relative;
    background-color: var(--color-cream);
    padding: var(--space-16) 0;
    overflow: hidden;
  }

  .story__background {
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    z-index: 1;
  }

  .story__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0.1;
  }

  .story__content {
    position: relative;
    z-index: 2;
    max-width: 750px;
    margin: 0 auto;
    text-align: center;
  }

  .story__heading {
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-brown-dark);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-8);
  }

  .story__text {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text);
  }

  .story__text p {
    margin-bottom: var(--space-6);
  }

  .story__text p:last-child {
    margin-bottom: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 1023px) {
    .story__background {
      display: none;
    }
  }

  @media (max-width: 639px) {
    .story {
      padding: var(--space-12) 0;
    }

    .story__heading {
      font-size: var(--text-3xl);
      margin-bottom: var(--space-6);
    }

    .story__text {
      font-size: var(--text-base);
    }
  }

  /* Tablet */
  @media (min-width: 640px) and (max-width: 1023px) {
    .story__heading {
      font-size: var(--text-4xl);
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .story__heading {
      font-size: var(--text-5xl);
    }
  }

  /* Animation States */
  .story__heading,
  .story__text {
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .story__heading {
    animation-delay: 0.2s;
  }

  .story__text {
    animation-delay: 0.4s;
  }
</style>
