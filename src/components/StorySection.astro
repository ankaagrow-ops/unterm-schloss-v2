---
export interface Props {
  heading: string;
  content: string;
  backgroundImage?: string;
}

const { heading, content, backgroundImage } = Astro.props;
---

<section class="story-section" id="story">
  <!-- Background Layer with Parallax -->
  <div class="story-background">
    <img 
      src={backgroundImage || "/images/02_innenhof_fachwerk_kopfsteinpflaster.jpg"} 
      alt="Historisches Fachwerkhaus Innenhof" 
      class="story-image"
      loading="lazy"
    />
    <!-- Enhanced Overlay -->
    <div class="story-overlay"></div>
  </div>
  
  <!-- Content Layer -->
  <div class="story-content">
    <div class="story-container">
      
      <!-- Heading -->
      <h2 class="story-heading" set:html={heading} />
      
      <!-- Content - Split into paragraphs for stagger -->
      <div class="story-text">
        {content.split('</p>').filter(p => p.trim()).map((paragraph, index) => (
          <div 
            class="story-paragraph"
            style={`animation-delay: ${0.2 + (index * 0.15)}s`}
            set:html={paragraph + '</p>'}
          />
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* STORY SECTION - PREMIUM DESIGN */
  /* Dieter Rams + Steve Jobs Prinzipien: Perfekte Proportionen */

  .story-section {
    position: relative;
    padding: 8rem 2rem; /* More generous vertical spacing */
    min-height: 60vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .story-section {
      padding: 10rem 2rem; /* Even more on tablet+ */
    }
  }

  @media (min-width: 1024px) {
    .story-section {
      padding: 12rem 2rem; /* Maximum breathing room */
      min-height: 70vh;
    }
  }

  /* Background Layer with Parallax */
  .story-background {
    position: absolute;
    inset: 0;
    z-index: 0;
    will-change: transform; /* Optimize for parallax */
    transform: translateZ(0); /* Force GPU layer */
  }

  .story-image {
    width: 100%;
    height: 120%; /* Taller for parallax movement */
    object-fit: cover;
    object-position: center;
    /* Subtle Ken Burns on background too */
    animation: subtleZoom 30s cubic-bezier(0.16, 1, 0.3, 1) infinite alternate;
  }

  @keyframes subtleZoom {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.05);
    }
  }

  /* Enhanced Overlay */
  .story-overlay {
    position: absolute;
    inset: 0;
    /* Multi-layer gradient for depth */
    background: 
      /* Vignette effect */
      radial-gradient(
        ellipse at center,
        transparent 0%,
        rgba(0, 0, 0, 0.1) 70%,
        rgba(0, 0, 0, 0.2) 100%
      ),
      /* Base gradient for readability */
      linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.92) 0%,
        rgba(250, 250, 249, 0.88) 50%,
        rgba(245, 245, 244, 0.85) 100%
      );
    backdrop-filter: blur(2px); /* Subtle blur for premium feel */
    -webkit-backdrop-filter: blur(2px);
  }

  /* Content Layer */
  .story-content {
    position: relative;
    z-index: 10;
    width: 100%;
    text-align: center;
  }

  .story-container {
    max-width: 48rem; /* 768px - optimal reading width */
    margin: 0 auto;
  }

  /* Enhanced Typography */
  .story-heading {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem; /* 40px */
    font-weight: 400;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: #3d2817; /* Warmer dark brown */
    text-align: center;
    margin-bottom: 3rem; /* Golden ratio spacing */
    
    /* Subtle animation */
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
  }

  @media (min-width: 768px) {
    .story-heading {
      font-size: 3rem; /* 48px */
      margin-bottom: 4rem; /* More space on desktop */
    }
  }

  @media (min-width: 1024px) {
    .story-heading {
      font-size: 3.5rem; /* 56px */
    }
  }

  /* Paragraph Stagger Animation */
  .story-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 1.125rem; /* 18px */
    line-height: 1.8; /* More generous line-height */
    color: #57534e; /* Warm gray */
    max-width: 48rem; /* 768px - optimal reading width */
    margin: 0 auto;
    text-align: center;
  }

  .story-text p {
    margin-bottom: 1.5rem; /* Golden ratio spacing */
  }

  @media (min-width: 768px) {
    .story-text {
      font-size: 1.25rem; /* 20px */
      line-height: 1.9;
    }
    
    .story-text p {
      margin-bottom: 2rem;
    }
  }

  .story-paragraph {
    opacity: 0;
    transform: translateY(30px);
    animation: paragraphReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes paragraphReveal {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Remove bottom margin from last paragraph */
  .story-paragraph:last-child {
    margin-bottom: 0;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .story-image,
    .story-paragraph,
    .story-heading {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .story-heading {
      color: #1a1a1a;
    }
    
    .story-text {
      color: #2a2a2a;
    }
  }
</style>

<script>
  // Parallax Effect - GPU-accelerated
  const storySection = document.querySelector('.story-section');
  const storyBackground = document.querySelector('.story-background');
  
  if (storySection && storyBackground) {
    const handleScroll = () => {
      const rect = storySection.getBoundingClientRect();
      const scrollProgress = (window.innerHeight - rect.top) / (window.innerHeight + rect.height);
      
      if (scrollProgress >= 0 && scrollProgress <= 1) {
        // Parallax: Background bewegt sich langsamer als Content
        const parallaxOffset = scrollProgress * 50; // 50px movement
        storyBackground.style.transform = `translateY(${parallaxOffset}px)`;
      }
    };
    
    window.addEventListener('scroll', handleScroll, { passive: true });
  }
</script>



