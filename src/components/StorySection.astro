<style>
  /* STORY SECTION - RAMS √ó JOBS PR√ÑZISION */
  /* Less, but better - Massive Whitespace + Obsessive Details */

  .story-section {
    position: relative;
    padding: 6rem 1.5rem; /* Massive Whitespace - min 80px sections */
    min-height: 80vh; /* Generous vertical space */
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #fafaf9; /* Instructions: warmes Hell - keine harte Schwarz/Wei√ü-Optik */
  }

  @media (min-width: 640px) {
    .story-section {
      padding: 8rem 2rem; /* 128px vertical spacing */
    }
  }

  @media (min-width: 768px) {
    .story-section {
      padding: 10rem 2rem; /* 160px vertical spacing */
    }
  }

  @media (min-width: 1024px) {
    .story-section {
      padding: 12rem 2rem; /* 192px vertical spacing - Maximum breathing room */
      min-height: 85vh;
    }
  }

  /* Background Layer with Parallax */
  .story-background {
    position: absolute;
    inset: 0;
    z-index: 0;
    will-change: transform; /* Optimize for parallax */
    transform: translateZ(0); /* Force GPU layer */
  }

  .story-image {
    width: 100%;
    height: 120%; /* Taller for parallax movement */
    object-fit: cover;
    object-position: center;
    opacity: 1 !important;
    visibility: visible !important;
    display: block !important;
    /* Subtle Ken Burns on background too */
    animation: subtleZoom 30s cubic-bezier(0.16, 1, 0.3, 1) infinite alternate;
  }

  @keyframes subtleZoom {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.05);
    }
  }

  /* Minimal Overlay for Light Sections */
  .story-overlay {
    position: absolute;
    inset: 0;
    /* Minimal overlay for light sections */
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.95) 0%,
      rgba(255, 255, 255, 0.85) 100%
    );
    backdrop-filter: blur(1px); /* Minimal blur */
    -webkit-backdrop-filter: blur(1px);
  }

  /* Content Layer */
  .story-content {
    position: relative;
    z-index: 10;
    width: 100%;
  }

  .story-container {
    max-width: 1280px; /* 8px Grid: 160 √ó 8px */
    margin: 0 auto;
    padding: 0 1rem; /* 8px base unit */
  }

  @media (min-width: 640px) {
    .story-container {
      padding: 0 1.5rem; /* 12px */
    }
  }

  @media (min-width: 1024px) {
    .story-container {
      padding: 0 2rem; /* 16px */
    }
  }

  /* 8px GRID SYSTEM - Perfect Alignment */
  .story-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem; /* 48px - 6 √ó 8px */
    align-items: start;
  }

  @media (min-width: 768px) {
    .story-grid {
      grid-template-columns: 1fr 400px; /* Fixed sidebar width */
      gap: 4rem; /* 64px - 8 √ó 8px */
    }
  }

  @media (min-width: 1024px) {
    .story-grid {
      gap: 5rem; /* 80px - 10 √ó 8px */
    }
  }

  /* Left Column: Text Content */
  .story-text-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* JOBS TYPOGRAPHY - 52px+ Headlines f√ºhren */
  .story-heading {
    font-family: 'Playfair Display', serif;
    font-size: 3.25rem; /* 52px - Jobs Standard */
    font-weight: 400;
    line-height: 1.1; /* Tighter leading for impact */
    letter-spacing: -0.03em; /* Tighter tracking */
    color: #3d2817; /* Instructions: prim√§r dunkles Braun */
    text-align: left;
    margin-bottom: 0;
    
    /* Subtle animation - max 20px translateY */
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
  }

  @media (min-width: 768px) {
    .story-heading {
      font-size: 4rem; /* 64px */
    }
  }

  @media (min-width: 1024px) {
    .story-heading {
      font-size: 4.5rem; /* 72px - Premium scale */
    }
  }

  /* RAMS CHIPS - Minimal, functional */
  .topic-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem; /* 12px - 1.5 √ó 8px */
    margin-bottom: 1.5rem; /* 24px - 3 √ó 8px */
  }

  .chip {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem; /* 8px */
    padding: 0.5rem 1rem; /* 8px 16px - 8px Grid */
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(139, 115, 85, 0.15); /* Subtle border */
    border-radius: 1.5rem; /* 24px - 3 √ó 8px */
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem; /* 14px */
    font-weight: 500;
    color: #3d2817; /* Instructions: prim√§r dunkles Braun */
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .chip:hover {
    background: rgba(139, 115, 85, 0.08); /* Subtle hover */
    transform: translateY(-1px); /* Minimal movement */
    box-shadow: 0 2px 8px rgba(139, 115, 85, 0.1);
  }

  .chip-icon {
    font-size: 1rem;
  }

  .chip-text {
    white-space: nowrap;
  }

  /* JOBS BODY TEXT - Perfect readability */
  .story-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 1.125rem; /* 18px */
    line-height: 1.7; /* Optimal reading line-height */
    color: #374151; /* High contrast gray */
    text-align: left;
    max-width: 65ch; /* Optimal line length */
  }

  .story-text p {
    margin-bottom: 1.5rem; /* 24px - 3 √ó 8px */
  }

  @media (min-width: 768px) {
    .story-text {
      font-size: 1.25rem; /* 20px */
      line-height: 1.8;
    }
    
    .story-text p {
      margin-bottom: 2rem; /* 32px - 4 √ó 8px */
    }
  }

  .story-paragraph {
    opacity: 0;
    transform: translateY(20px); /* Max 20px movement */
    animation: paragraphReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes paragraphReveal {
    from {
      opacity: 0;
      transform: translateY(20px); /* Max 20px movement */
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Remove bottom margin from last paragraph */
  .story-paragraph:last-child {
    margin-bottom: 0;
  }

  /* RAMS CTA - 1 Primary CTA pro Section */
  .story-ctas {
    display: flex;
    flex-direction: column;
    gap: 1rem; /* 16px - 2 √ó 8px */
    margin-top: 2.5rem; /* 40px - 5 √ó 8px */
  }

  @media (min-width: 480px) {
    .story-ctas {
      flex-direction: row;
      gap: 1.5rem; /* 24px - 3 √ó 8px */
    }
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem; /* 16px 40px - 8px Grid */
    background: #8b7355; /* Instructions: akzent */
    color: white;
    text-decoration: none;
    border-radius: 0.5rem; /* 8px - 1 √ó 8px */
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(139, 115, 85, 0.2);
    min-height: 48px; /* Touch target */
  }

  .btn-primary:hover {
    background: #7a6548; /* Instructions: dunkler Hover */
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 115, 85, 0.3);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem; /* 16px 40px - 8px Grid */
    background: transparent;
    color: #8b1538; /* Primary wine red */
    text-decoration: none;
    border: 2px solid #8b1538;
    border-radius: 0.5rem; /* 8px - 1 √ó 8px */
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    min-height: 48px; /* Touch target */
  }

  .btn-secondary:hover {
    background: #8b1538;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 21, 56, 0.2);
  }

  /* Right Column: Facts Card */
  .story-facts-column {
    display: flex;
    justify-content: center;
  }

  .facts-card {
    background: rgba(255, 255, 255, 0.98);
    border-radius: 1rem; /* 16px - 2 √ó 8px */
    padding: 2rem; /* 32px - 4 √ó 8px */
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(139, 21, 56, 0.1); /* Subtle wine red border */
    width: 100%;
    max-width: 400px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .facts-card:hover {
    transform: translateY(-2px); /* Subtle movement */
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  }

  .facts-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(139, 115, 85, 0.1);
  }

  .facts-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem; /* 24px */
    font-weight: 600;
    color: #3d2817; /* Instructions: prim√§r dunkles Braun */
    margin: 0 0 0.5rem 0;
  }

  .facts-subtitle {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem; /* 14px */
    color: #8b7355; /* Instructions: akzent */
    margin: 0;
    font-weight: 500;
  }

  .facts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .fact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .fact-icon {
    font-size: 1.5rem;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(139, 115, 85, 0.1);
    border-radius: 0.5rem;
    flex-shrink: 0;
  }

  .fact-content {
    flex: 1;
  }

  .fact-label {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.75rem; /* 12px */
    font-weight: 500;
    color: #8b7355; /* Instructions: akzent */
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem; /* 4px - 0.5 √ó 8px */
  }

  .fact-value {
    font-family: 'DM Sans', sans-serif;
    font-size: 1rem; /* 16px */
    font-weight: 600;
    color: #3d2817; /* Instructions: prim√§r dunkles Braun */
  }

  .facts-quote {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(139, 115, 85, 0.1);
  }

  .facts-quote p {
    font-family: 'Playfair Display', serif;
    font-size: 0.875rem; /* 14px */
    font-style: italic;
    color: #8b7355; /* Instructions: akzent */
    margin: 0;
    line-height: 1.5;
  }

  /* JOBS ANIMATIONS - Subtle, max 20px movement */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px); /* Max 20px movement */
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .story-image,
    .story-paragraph,
    .story-heading {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .story-heading {
      color: #1a1a1a;
    }
    
    .story-text {
      color: #2a2a2a;
    }
  }
</style>

<script>
  // Parallax Effect - GPU-accelerated
  const storySection = document.querySelector('.story-section');
  const storyBackground = document.querySelector('.story-background');
  
  if (storySection && storyBackground) {
    const handleScroll = () => {
      const rect = storySection.getBoundingClientRect();
      const scrollProgress = (window.innerHeight - rect.top) / (window.innerHeight + rect.height);
      
      if (scrollProgress >= 0 && scrollProgress <= 1) {
        // Parallax: Background bewegt sich langsamer als Content
        const parallaxOffset = scrollProgress * 50; // 50px movement
        storyBackground.style.transform = `translateY(${parallaxOffset}px)`;
      }
    };
    
    window.addEventListener('scroll', handleScroll, { passive: true });
  }
</script>



