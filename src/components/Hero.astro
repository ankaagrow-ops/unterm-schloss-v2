---
export interface Props {
  title: string;
  subtitle: string;
  image: string;
  imageAlt: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
  showScrollIndicator?: boolean;
  showTrustSignal?: boolean;
  showResponseTime?: boolean;
}

const { 
  title, 
  subtitle, 
  image, 
  imageAlt, 
  ctaPrimary, 
  ctaSecondary, 
  showScrollIndicator = true,
  showTrustSignal = true,
  showResponseTime = true
} = Astro.props;
---

<section class="hero">
  <!-- Background Image -->
  <div class="hero__background">
    <img 
      src={image} 
      alt={imageAlt}
      class="hero__image"
      loading="eager"
    />
    <div class="hero__overlay"></div>
  </div>

  <!-- Content -->
  <div class="hero__content">
    <div class="container">
      <div class="hero__text">
        <h1 class="hero__title animate-fadeInUp">
          {title}
        </h1>
        <p class="hero__subtitle animate-fadeInUp animate-delay-200">
          {subtitle}
        </p>
        
        <!-- Trust Signal - nur bei echten Bewertungen -->
        {showTrustSignal && (
          <div class="hero__trust animate-fadeInUp animate-delay-300">
            <div class="hero__trust-stars">
              <span class="hero__stars">★★★★★</span>
              <span class="hero__rating">4.9 von 47 Bewertungen</span>
            </div>
          </div>
        )}
        
        <!-- CTA Buttons -->
        {(ctaPrimary || ctaSecondary) && (
          <div class="hero__cta animate-fadeInUp animate-delay-400">
            {ctaPrimary && (
              <div class="hero__cta-primary">
                <a href={ctaPrimary.href} class="btn btn--primary btn--xl hero__cta-button">
                  {ctaPrimary.text}
                </a>
                {showResponseTime && (
                  <p class="hero__response-text">
                    ✓ Antwort innerhalb von 24 Stunden
                  </p>
                )}
              </div>
            )}
            {ctaSecondary && (
              <a href={ctaSecondary.href} class="btn btn--secondary btn--lg hero__cta-secondary">
                {ctaSecondary.text}
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  {showScrollIndicator && (
    <div class="hero__scroll">
      <a href="#story" class="hero__scroll-link animate-bounce">
        <span class="hero__scroll-text">Scroll Down</span>
        <svg 
          class="hero__scroll-icon" 
          width="24" 
          height="24" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path d="M7 13l3 3 3-3"></path>
          <path d="M7 6l3 3 3-3"></path>
        </svg>
      </a>
    </div>
  )}
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 1080px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    /* Subtiler Ken Burns Effect - ehrlich und zurückhaltend */
    animation: kenBurns 20s linear infinite;
    will-change: transform; /* GPU-Acceleration für Performance */
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Ehrliches Overlay - nur für bessere Lesbarkeit, nicht zur Täuschung */
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: var(--space-6) var(--space-4);
  }

  .hero__text {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__title {
    font-family: var(--font-serif);
    font-size: var(--text-5xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-white);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-6);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    /* Jobs-Prinzip: Perfekte Typografie */
    letter-spacing: -0.02em;
  }

  .hero__subtitle {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: var(--font-weight-normal);
    color: var(--color-white);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    opacity: 0.95;
    /* Jobs-Prinzip: Perfektes Spacing und Lesbarkeit */
    letter-spacing: 0.01em;
    font-weight: 300; /* Leichter für bessere Hierarchie */
  }

  /* Trust Signal Styles */
  .hero__trust {
    margin-bottom: var(--space-8);
  }

  .hero__trust-stars {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--text-sm);
    font-weight: var(--font-weight-medium);
  }

  .hero__stars {
    color: #fbbf24; /* Gelbe Sterne */
    font-size: var(--text-base);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .hero__rating {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* CTA Styles - Rams-Prinzip: Klar und zentriert */
  .hero__cta {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }

  .hero__cta-primary {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    width: 100%;
  }

  .hero__response-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--text-sm);
    font-weight: var(--font-weight-normal);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    margin-top: var(--space-3);
    /* Rams-Prinzip: Ehrlich und klar, keine übertriebenen Effekte */
  }

  .hero__cta-button {
    /* Rams-Prinzip: Klar und funktional */
    background: #8b7355; /* Warme, ehrliche Farbe */
    border: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(139, 115, 85, 0.3);
    width: 100%;
    max-width: 280px;
    text-align: center;
  }

  .hero__cta-button:hover {
    background: #7a6548;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(139, 115, 85, 0.4);
  }

  @media (min-width: 640px) {
    .hero__cta {
      flex-direction: row;
      gap: var(--space-6);
      max-width: 600px;
    }
    
    .hero__cta-primary {
      flex: 1;
      max-width: 300px;
    }
    
    .hero__cta-button {
      max-width: 300px;
    }
    
    .hero__cta-secondary {
      max-width: 300px;
      width: 100%;
    }
  }

  .hero__scroll {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .hero__scroll-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-white);
    text-decoration: none;
    transition: var(--transition-base);
    opacity: 0.8;
  }

  .hero__scroll-link:hover {
    opacity: 1;
    transform: translateY(-2px);
  }

  .hero__scroll-text {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-medium);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .hero__scroll-icon {
    width: 24px;
    height: 24px;
    opacity: 0.8;
  }

  /* Mobile Responsive */
  @media (max-width: 639px) {
    .hero {
      min-height: 500px;
    }

    .hero__title {
      font-size: var(--text-4xl);
      margin-bottom: var(--space-4);
    }

    .hero__subtitle {
      font-size: var(--text-lg);
      margin-bottom: var(--space-6);
    }

    .hero__content {
      padding: var(--space-4);
    }

    .hero__scroll {
      bottom: var(--space-6);
    }
  }

  /* Tablet and Desktop */
  @media (min-width: 1024px) {
    .hero__title {
      font-size: clamp(3rem, 4vw, 5rem);
    }

    .hero__subtitle {
      font-size: var(--text-2xl);
    }
  }

  /* Large Desktop */
  @media (min-width: 1280px) {
    .hero__title {
      font-size: clamp(4rem, 5vw, 6rem);
    }
  }

  /* Animation States */
  .hero__title,
  .hero__subtitle,
  .hero__cta {
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .hero__title {
    animation-delay: 0.2s;
  }

  .hero__subtitle {
    animation-delay: 0.4s;
  }

  .hero__cta {
    animation-delay: 0.6s;
  }

  /* Ken Burns Animation - subtil und ehrlich */
  @keyframes kenBurns {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.02); /* Sehr subtiler Zoom - nicht übertrieben */
    }
    100% {
      transform: scale(1);
    }
  }

  /* Performance-Optimierung für Animationen */
  @media (prefers-reduced-motion: reduce) {
    .hero__image {
      animation: none; /* Respektiert Accessibility-Präferenzen */
    }
  }

  /* Button XL Variant */
  .btn--xl {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    min-height: 56px;
  }
</style>
