---
export interface Feature {
  title: string;
  image: string;
  imageAlt: string;
  description?: string;
  icon?: string;
  highlights?: string[];
}

export interface Props {
  heading: string;
  features: Feature[];
}

const { heading, features } = Astro.props;
---

<section class="features-section">
  <div class="container">
    <div class="features-header">
      <h2 class="heading">{heading}</h2>
      <p class="features-subtitle">
        Jeder Raum wurde mit Liebe zum Detail gestaltet – für Ihren perfekten Aufenthalt in der Pfalz.
      </p>
    </div>
    
    <div class="features-grid">
      {features.map((feature, index) => (
        <div class="feature-card">
          <div class="feature-image">
            <img 
              src={feature.image} 
              alt={feature.imageAlt}
              loading="lazy"
            />
          </div>
          
          <div class="feature-content">
            <h3 class="feature-title">{feature.title}</h3>
            
            {feature.description && (
              <p class="feature-description">{feature.description}</p>
            )}
            
            {feature.highlights && feature.highlights.length > 0 && (
              <div class="feature-highlights">
                {feature.highlights.map((highlight) => (
                  <div class="highlight-item">
                    <span class="highlight-icon">✓</span>
                    <span class="highlight-text">{highlight}</span>
                  </div>
                ))}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA Section -->
    <div class="features-cta">
      <a href="/apartment" class="btn-primary">
        Alle Räume entdecken
      </a>
      <a href="/booking" class="btn-secondary">
        Verfügbarkeit prüfen
      </a>
    </div>
  </div>
</section>

<style>
  .features-section {
    padding: 4rem 0;
    background: #fafaf9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .features-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .heading {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #3d2817;
    margin-bottom: 1rem;
  }

  .features-subtitle {
    font-family: 'DM Sans', sans-serif;
    font-size: 1.1rem;
    color: #8b7355;
    max-width: 600px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .feature-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .feature-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .feature-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .feature-card:hover .feature-image img {
    transform: scale(1.05);
  }

  .feature-content {
    padding: 1.5rem;
  }

  .feature-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #3d2817;
    margin-bottom: 0.75rem;
  }

  .feature-description {
    font-family: 'DM Sans', sans-serif;
    font-size: 1rem;
    color: #8b7355;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .feature-highlights {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .highlight-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .highlight-icon {
    color: #8b7355;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .highlight-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.9rem;
    color: #3d2817;
  }

  .features-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary,
  .btn-secondary {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-primary {
    background: #8b7355;
    color: white;
  }

  .btn-primary:hover {
    background: #7a6548;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 115, 85, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: #8b7355;
    border: 2px solid #8b7355;
  }

  .btn-secondary:hover {
    background: #8b7355;
    color: white;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .features-section {
      padding: 2rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .heading {
      font-size: 2rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .features-cta {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }
  }
</style>