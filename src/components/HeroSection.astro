---
// Hero Section - Dieter Rams + Steve Jobs Präzision
// Reine Astro-Komponente für maximale Performance

import { Image } from 'astro:assets';

export interface Props {
  title: string;
  subtitle: string;
  image: string;
  imageAlt: string;
  ctaText: string;
  ctaHref: string;
  hasRealReviews?: boolean;
  reviewCount?: number;
  reviewRating?: number;
}

const { 
  title, 
  subtitle, 
  image, 
  imageAlt, 
  ctaText, 
  ctaHref,
  hasRealReviews = false,
  reviewCount = 0,
  reviewRating = 0
} = Astro.props;

// Hero-Bild direkt verwenden - Astro Image Component
---

<section 
  class="hero-section"
  aria-label="Hero Section"
>
  <!-- Background Image Layer - GPU-optimiert mit Ken Burns Effect -->
  <div class="hero-background">
    <img
      src="/images/01_aussenansicht_fachwerkhaus_haupteingang.jpg"
      alt={imageAlt}
      class="hero-image ken-burns"
      loading="eager"
      fetchpriority="high"
      width="1920"
      height="1280"
    />
    <!-- Ehrliches Overlay - nur für Lesbarkeit -->
    <div class="hero-overlay"></div>
  </div>

  <!-- Content Layer - Perfekte Zentrierung -->
  <div class="hero-content">
    <div class="hero-container">
      
      <!-- 1. HEADLINE - Maximum Impact mit Animation -->
      <h1 class="hero-title fade-in-up">
        <span class="word-animate">{title.split(' ').slice(0, 2).join(' ')}</span>
        <span class="word-animate delay-1">{title.split(' ').slice(2).join(' ')}</span>
      </h1>

      <!-- 2. SUBHEADLINE - Fibonacci Spacing mit verzögerter Animation -->
      <p class="hero-subtitle fade-in-up delay-2">
        {subtitle}
      </p>

      <!-- 3. TRUST-SIGNAL - Nur bei echten Bewertungen -->
      {hasRealReviews && reviewCount > 0 && (
        <div class="hero-trust">
          <span class="hero-trust-stars">★★★★★</span>
          <span class="hero-trust-rating">{reviewRating}</span>
          <span class="hero-trust-separator">·</span>
          <span class="hero-trust-count">{reviewCount} Bewertungen</span>
        </div>
      )}

      <!-- 4. CTA-BUTTON - Pixel-perfect -->
      <div class="hero-cta">
        <!-- Primary CTA - Rams-Prinzip: Klar und funktional mit Animation -->
        <a 
          href={ctaHref}
          class="hero-button fade-in-up delay-3 scale-in"
          aria-label={`${ctaText} - Öffnet Buchungsanfrage`}
        >
          <span class="hero-button-text">{ctaText}</span>
          <!-- Subtle hover glow - Jobs-Prinzip: Details matter -->
          <div class="hero-button-glow"></div>
        </a>

        <!-- Badge unter Button - 16px Abstand (Fibonacci) mit Animation -->
        <p class="hero-badge fade-in delay-4">
          <span class="hero-badge-icon">✓</span>
          Antwort innerhalb von 24 Stunden
        </p>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator - Jobs-Prinzip: Perfekte Animation -->
  <div class="hero-scroll fade-in delay-5" aria-label="Scroll nach unten">
    <div class="hero-scroll-container bounce">
      <div class="hero-scroll-dot"></div>
    </div>
  </div>
</section>

<style>
  /* HERO-SECTION PRECISION STYLES */
  /* Dieter Rams + Steve Jobs Prinzipien: Jedes Pixel zählt */

  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* Background Image Layer */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    /* Ken Burns Effect - subtil und ehrlich */
    animation: kenBurns 20s linear infinite;
    will-change: transform;
    backface-visibility: hidden;
    transform: translateZ(0); /* GPU-Layer */
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    /* Ehrliches Overlay - nur für bessere Lesbarkeit */
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  /* Content Layer */
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    text-align: center;
    padding: 0 1rem;
  }

  .hero-container {
    max-width: 80rem; /* 1280px */
    margin: 0 auto;
  }

  /* Typografie - Mathematisch präzise */
  .hero-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400; /* Rams: Nicht Bold, sondern elegant */
    font-size: 2.25rem; /* 36px */
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: white;
    margin-bottom: 1.5rem; /* 24px */
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    /* Animation */
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }

  .hero-subtitle {
    font-family: 'DM Sans', sans-serif;
    font-weight: 300;
    font-size: 1.125rem; /* 18px */
    line-height: 1.6;
    letter-spacing: 0.02em;
    color: rgba(255, 255, 255, 0.95);
    margin: 0 auto 2.5rem auto; /* 40px - Zentriert mit auto margins */
    max-width: 48rem; /* Optimal für Lesbarkeit: 60-75 Zeichen */
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    text-align: center; /* Explizite Zentrierung */
    /* Animation */
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
  }

  /* Trust Signal - Nur bei echten Bewertungen */
  .hero-trust {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 3rem; /* 48px */
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    /* Animation */
    opacity: 0;
    animation: fadeIn 0.8s ease-out 0.6s forwards;
  }

  .hero-trust-stars {
    color: #fbbf24; /* Gold */
    font-size: 1.125rem;
  }

  .hero-trust-rating {
    font-weight: 500;
  }

  .hero-trust-separator {
    color: rgba(255, 255, 255, 0.7);
  }

  .hero-trust-count {
    color: rgba(255, 255, 255, 0.8);
  }

  /* CTA-Button - Pixel-perfect */
  .hero-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem; /* 16px */
    /* Animation */
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease-out 0.8s forwards;
  }

  .hero-button {
    position: relative;
    display: inline-block;
    background: #8b7355; /* Warme, ehrliche Farbe */
    color: white;
    border: none;
    border-radius: 9999px; /* Perfect circle */
    padding: 1rem 2.5rem; /* 16px × 40px */
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 1.125rem; /* 18px */
    letter-spacing: 0.01em;
    line-height: 1.4;
    text-decoration: none;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    overflow: hidden;
    min-height: 44px; /* Touch-friendly */
    min-width: 44px;
  }

  .hero-button:hover {
    background: #7a6548;
    box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.3);
    transform: scale(1.05);
  }

  .hero-button:active {
    transform: scale(1.0);
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .hero-button:focus {
    outline: none;
    box-shadow: 0 0 0 4px rgba(139, 115, 85, 0.5);
  }

  .hero-button-text {
    position: relative;
    z-index: 10;
  }

  .hero-button-glow {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0);
    border-radius: inherit;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-button:hover .hero-button-glow {
    background: rgba(255, 255, 255, 0.1);
  }

  .hero-badge {
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.875rem; /* 14px */
    font-weight: 300;
    letter-spacing: 0.01em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
  }

  .hero-badge-icon {
    color: #10b981; /* Green */
    font-size: 1rem;
  }

  /* Scroll Indicator */
  .hero-scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    animation: bounce 2s ease-in-out infinite;
  }

  .hero-scroll-container {
    width: 1.75rem; /* 28px */
    height: 2.75rem; /* 44px */
    border: 2px solid rgba(255, 255, 255, 0.7);
    border-radius: 9999px;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 0.5rem;
  }

  .hero-scroll-dot {
    width: 0.375rem; /* 6px */
    height: 0.375rem; /* 6px */
    background: white;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  /* Responsive Design */
  @media (min-width: 640px) {
    .hero-title {
      font-size: 3rem; /* 48px */
    }
    
    .hero-subtitle {
      font-size: 1.25rem; /* 20px */
      margin: 0 auto 2.5rem auto; /* Zentriert auf allen Größen */
    }
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.75rem; /* 60px */
    }
    
    .hero-subtitle {
      font-size: 1.5rem; /* 24px */
      margin: 0 auto 2.5rem auto; /* Zentriert auf allen Größen */
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4.5rem; /* 72px */
    }
    
    .hero-subtitle {
      font-size: 1.875rem; /* 30px */
      margin: 0 auto 2.5rem auto; /* Zentriert auf allen Größen */
    }
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes kenBurns {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.02); /* Sehr subtiler Zoom - nicht übertrieben */
    }
    100% {
      transform: scale(1);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }

  /* Accessibility - Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-image,
    .hero-scroll,
    .hero-scroll-dot {
      animation: none !important;
    }
    
    .hero-button:hover {
      transform: none;
    }
    
    .hero-title,
    .hero-subtitle,
    .hero-trust,
    .hero-cta {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .hero-title,
    .hero-subtitle {
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
    }
    
    .hero-button {
      border: 2px solid white;
    }
  }

  /* ANIMATION KEYFRAMES - GPU-accelerated */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    from {
      transform: scale(0.95);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @keyframes wordFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ANIMATION CLASSES - GPU-accelerated */
  .fade-in-up {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .fade-in {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }

  .scale-in {
    transform: scale(0.95);
    animation: scaleIn 0.5s ease-out forwards;
  }

  .bounce {
    animation: bounce 2s ease-in-out infinite;
  }

  /* Word Animation - Staggered Effect */
  .word-animate {
    display: inline-block;
    opacity: 0;
    transform: translateY(20px);
    animation: wordFadeIn 0.6s ease-out forwards;
  }

  .word-animate.delay-1 {
    animation-delay: 0.2s;
  }

  /* Animation Delays */
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.3s; }
  .delay-3 { animation-delay: 0.5s; }
  .delay-4 { animation-delay: 0.7s; }
  .delay-5 { animation-delay: 0.9s; }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .ken-burns,
    .fade-in-up,
    .fade-in,
    .scale-in,
    .bounce,
    .word-animate {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }
  }
</style>
