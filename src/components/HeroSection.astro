---
// üé® HERO SECTION PREMIUM UPGRADE
// Ken Burns + Word Stagger + Premium Animations

import { Image } from 'astro:assets';

export interface Props {
  title: string;
  subtitle: string;
  image: string;
  imageAlt: string;
  ctaText: string;
  ctaHref: string;
  ctaSecondaryText?: string;
  ctaSecondaryHref?: string;
  features?: string[];
  hasRealReviews?: boolean;
  reviewCount?: number;
  reviewRating?: number;
}

const {
  title,
  subtitle,
  image,
  imageAlt,
  ctaText,
  ctaHref,
  ctaSecondaryText,
  ctaSecondaryHref,
  features = [],
  hasRealReviews = false,
  reviewCount = 0,
  reviewRating = 0
} = Astro.props;

const titleWords = title.split(' ');
---

<section 
  class="hero-section"
  aria-label="Hero Section"
>
  <!-- üé¨ KEN BURNS BACKGROUND -->
  <div class="hero-background">
    <div class="ken-burns-wrapper">
      <img
        src={image}
        alt={imageAlt}
        class="hero-image"
        loading="eager"
        fetchpriority="high"
        width="1920"
        height="1280"
        style="opacity: 1 !important; visibility: visible !important;"
      />
    </div>
    
    <!-- üåà ANIMATED GRADIENT OVERLAY -->
    <div class="hero-overlay-gradient"></div>
    <div class="hero-overlay"></div>
  </div>

  <!-- üìù CONTENT LAYER -->
  <div class="hero-content">
    <div class="hero-container">
      
      <!-- ‚ú® HEADLINE mit WORD-BY-WORD STAGGER -->
      <h1 class="hero-title">
        {titleWords.map((word, index) => (
          <span 
            class="word-stagger" 
            style={`--word-index: ${index}`}
          >
            {word}{' '}
          </span>
        ))}
      </h1>

      <!-- üìñ SUBHEADLINE -->
      <h2 class="hero-subtitle">
        {subtitle}
      </h2>

      <!-- üè∑Ô∏è USP FEATURE BADGES -->
      {features.length > 0 && (
        <div class="hero-features">
          {features.map((feature) => (
            <span class="feature-badge">{feature}</span>
          ))}
        </div>
      )}

      <!-- ‚≠ê TRUST SIGNAL -->
      {hasRealReviews && reviewCount > 0 && (
        <div class="hero-trust">
          <span class="hero-trust-stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
          <span class="hero-trust-rating">{reviewRating}</span>
          <span class="hero-trust-separator">¬∑</span>
          <span class="hero-trust-count">{reviewCount} Bewertungen</span>
        </div>
      )}

      <!-- üéØ CTA BUTTONS -->
      <div class="hero-cta">
        <div class="hero-cta-buttons">
          <a
            href={ctaHref}
            class="hero-button hero-button--primary"
            aria-label={`${ctaText} - √ñffnet Buchungsanfrage`}
          >
            <span class="hero-button-text">{ctaText}</span>
            <span class="hero-button-shine"></span>
          </a>

          {ctaSecondaryText && ctaSecondaryHref && (
            <a
              href={ctaSecondaryHref}
              class="hero-button hero-button--secondary"
              aria-label={ctaSecondaryText}
            >
              <span class="hero-button-text">{ctaSecondaryText}</span>
            </a>
          )}
        </div>

        <p class="hero-badge">
          <span class="hero-badge-icon">‚úì</span>
          Antwort innerhalb von 24 Stunden
        </p>
      </div>
    </div>
  </div>

  <!-- üñ±Ô∏è PREMIUM SCROLL INDICATOR -->
  <div class="hero-scroll" aria-label="Scroll nach unten">
    <div class="scroll-mouse">
      <div class="scroll-wheel"></div>
    </div>
    <span class="scroll-text">Entdecken</span>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    /* 8px Grid System */
    padding: 0 1rem; /* 16px - 2 √ó 8px */
  }

  @media (min-width: 640px) {
    .hero-section {
      padding: 0 1.5rem; /* 24px - 3 √ó 8px */
    }
  }

  @media (min-width: 1024px) {
    .hero-section {
      padding: 0 2rem; /* 32px - 4 √ó 8px */
    }
  }

  /* üé¨ KEN BURNS EFFECT */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .ken-burns-wrapper {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .hero-image {
    width: 110%;
    height: 110%;
    object-fit: cover;
    object-position: center;
    animation: kenBurns 25s ease-in-out infinite alternate;
    will-change: transform;
    transform: scale(1);
    opacity: 1 !important;
    visibility: visible !important;
    display: block !important;
  }

  @keyframes kenBurns {
    0% {
      transform: scale(1) translate(0, 0);
    }
    100% {
      transform: scale(1.05) translate(-2%, -1.5%); /* Subtle movement */
    }
  }

  /* üåà ANIMATED GRADIENT */
  .hero-overlay-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(139, 115, 85, 0.15) 0%,
      transparent 50%,
      rgba(139, 115, 85, 0.1) 100%
    );
    animation: gradientPulse 8s ease-in-out infinite;
  }

  @keyframes gradientPulse {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.6;
    }
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.15) 0%,
      rgba(0, 0, 0, 0.25) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
  }

  /* RAMS CONTENT - 8px Grid Alignment */
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    text-align: center;
    padding: 0; /* Padding handled by hero-section */
  }

  .hero-container {
    max-width: 64rem; /* 1024px - 8px Grid: 128 √ó 8px - Better centering */
    margin: 0 auto;
    text-align: center;
  }

  /* JOBS HEADLINE - 64px+ f√ºhrt die Hierarchie */
  .hero-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    font-size: clamp(2.5rem, 5vw, 4rem); /* 40px ‚Üí 64px responsive */
    line-height: 1.1; /* Tighter leading for impact */
    letter-spacing: -0.03em; /* Tighter tracking */
    color: white;
    margin-bottom: 1rem; /* 16px - 2 √ó 8px */
    text-shadow: 0 4px 24px rgba(0, 0, 0, 0.6);
  }

  .word-stagger {
    display: inline-block;
    opacity: 0;
    transform: translateY(20px); /* Max 20px movement - Jobs standard */
    animation: wordReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: calc(var(--word-index) * 0.1s + 0.2s);
    margin-right: 0.25em; /* Konstanter Abstand zwischen W√∂rtern */
  }

  @keyframes wordReveal {
    0% {
      opacity: 0;
      transform: translateY(20px); /* Max 20px movement */
      filter: blur(4px); /* Subtle blur */
    }
    100% {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  /* JOBS SUBHEADLINE - Perfect readability */
  .hero-subtitle {
    font-family: 'DM Sans', sans-serif;
    font-weight: 300;
    font-size: clamp(1.25rem, 2.5vw, 1.5rem); /* 20px ‚Üí 24px responsive */
    line-height: 1.5;
    letter-spacing: 0.01em;
    color: rgba(255, 255, 255, 0.95);
    margin: 0 auto 2rem auto; /* 32px - 4 √ó 8px */
    max-width: 50rem; /* Optimal line length */
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.6s forwards;
  }

  /* üè∑Ô∏è USP FEATURE BADGES */
  .hero-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem; /* 12px - 8px Grid */
    justify-content: center;
    align-items: center;
    margin: 0 auto 2rem auto;
    max-width: 40rem;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.9s forwards;
  }

  .feature-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem; /* 6px */
    padding: 0.5rem 1rem; /* 8px 16px - 8px Grid */
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1.5rem; /* 24px - 3 √ó 8px */
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem; /* 14px */
    font-weight: 500;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  .feature-badge:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  /* ‚≠ê TRUST */
  .hero-trust {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 2.5rem;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
    opacity: 0;
    animation: fadeIn 0.6s ease-out 1.2s forwards;
  }

  .hero-trust-stars {
    color: #fbbf24;
    font-size: 1.125rem;
  }

  /* üéØ CTA BUTTON */
  .hero-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    opacity: 0;
    animation: scaleIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 1.4s forwards;
  }

  .hero-cta-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem; /* 16px - 2 √ó 8px */
    align-items: center;
    width: 100%;
    max-width: 28rem; /* 448px */
  }

  @media (min-width: 640px) {
    .hero-cta-buttons {
      flex-direction: row;
      justify-content: center;
      gap: 1rem;
    }
  }

  .hero-button {
    position: relative;
    display: inline-block;
    background: #8b7355; /* Instructions: akzent */
    color: white;
    border: none;
    border-radius: 0.5rem; /* 8px - 1 √ó 8px */
    padding: 1.125rem 2.75rem; /* 18px 44px - 8px Grid */
    font-family: 'DM Sans', sans-serif;
    font-weight: 600; /* Bolder for impact */
    font-size: 1.125rem; /* 18px */
    letter-spacing: 0.01em;
    text-decoration: none;
    box-shadow: 
      0 4px 14px rgba(139, 115, 85, 0.3),
      0 2px 6px rgba(139, 115, 85, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    min-height: 48px; /* Touch target */
    cursor: pointer;
  }

  .hero-button:hover {
    background: #7a6548; /* Instructions: dunkler Hover */
    box-shadow: 
      0 8px 24px rgba(139, 115, 85, 0.4),
      0 4px 12px rgba(139, 115, 85, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    transform: translateY(-2px); /* Subtle movement */
  }

  .hero-button:active {
    transform: translateY(0) scale(0.98);
  }

  .hero-button-text {
    position: relative;
    z-index: 2;
  }

  /* ‚ú® SHINE EFFECT */
  .hero-button-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transition: left 0.6s;
  }

  .hero-button:hover .hero-button-shine {
    left: 100%;
  }

  /* SECONDARY BUTTON VARIANT */
  .hero-button--secondary {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow:
      0 4px 14px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .hero-button--secondary:hover {
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .hero-button--secondary .hero-button-shine {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
  }

  /* ‚úì BADGE */
  .hero-badge {
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.875rem;
    font-weight: 300;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
  }

  .hero-badge-icon {
    color: #10b981;
    font-weight: 600;
  }

  /* üñ±Ô∏è SCROLL INDICATOR */
  .hero-scroll {
    position: absolute;
    bottom: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
    animation: fadeIn 0.6s ease-out 2s forwards;
  }

  .scroll-mouse {
    width: 2rem;
    height: 3rem;
    border: 2px solid rgba(255, 255, 255, 0.7);
    border-radius: 1rem;
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 0.5rem;
  }

  .scroll-wheel {
    width: 0.25rem;
    height: 0.5rem;
    background: white;
    border-radius: 0.25rem;
    animation: scrollWheel 2s ease-in-out infinite;
  }

  @keyframes scrollWheel {
    0%, 100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(0.75rem);
      opacity: 0.3;
    }
  }

  .scroll-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* JOBS RESPONSIVE TYPOGRAPHY */
  @media (min-width: 640px) {
    .hero-title {
      font-size: 4rem; /* 64px */
    }
    .hero-subtitle {
      font-size: 1.375rem; /* 22px */
    }
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 4.5rem; /* 72px */
    }
    .hero-subtitle {
      font-size: 1.5rem; /* 24px */
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 5.5rem; /* 88px - Premium scale */
    }
    .hero-subtitle {
      font-size: 1.875rem; /* 30px */
    }
  }

  /* JOBS ANIMATIONS - Subtle, max 20px movement */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px); /* Max 20px movement */
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* ‚ôø ACCESSIBILITY */
  @media (prefers-reduced-motion: reduce) {
    .hero-image,
    .hero-overlay-gradient,
    .word-stagger,
    .hero-subtitle,
    .hero-trust,
    .hero-cta,
    .hero-scroll,
    .scroll-wheel,
    .hero-button-shine {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }
    
    .hero-button:hover {
      transform: none;
    }
  }

  @media (prefers-contrast: high) {
    .hero-title,
    .hero-subtitle {
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.9);
    }
    
    .hero-button {
      border: 2px solid white;
    }
  }
</style>